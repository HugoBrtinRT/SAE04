{% extends 'base.html.twig' %}

{% block title %}Welcome - Hugo Bertin{% endblock %}

{% block body %}

<body style="font-family: 'Roboto', sans-serif; background-color: #e9ecef; color: #212529; margin: 0; padding: 0; display: flex; flex-direction: column; min-height: 100vh;">
    <div class="container" style="flex: 1; display: flex; flex-direction: column; align-items: center; gap: 20px; margin-top: 50px;">

        <div style="display: flex; gap: 20px;">
            <!-- Card 1: About Me -->
            <div class="flip-card" style="perspective: 1000px;">
                <div class="flip-card-inner" style="position: relative; width: 350px; height: 250px; text-align: center; transition: transform 0.6s; transform-style: preserve-3d;">
                    <div class="flip-card-front" style="position: absolute; width: 100%; height: 100%; backface-visibility: hidden; background: #007bff; color: white; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                        <h3>About Me</h3>
                    </div>
                    <div class="flip-card-back" style="position: absolute; width: 100%; height: 100%; backface-visibility: hidden; background: #ffffff; color: #212529; transform: rotateY(180deg); display: flex; align-items: center; justify-content: center; flex-direction: column; border-radius: 10px;">
                        <p><strong>Name:</strong> Hugo BERTIN</p>
                        <p><strong>Location:</strong> Paugnat, Puy-de-DÃ´me</p>
                    </div>
                </div>
            </div>

            <!-- Card 2: My Passions -->
            <div class="flip-card" style="perspective: 1000px;">
                <div class="flip-card-inner" style="position: relative; width: 350px; height: 250px; text-align: center; transition: transform 0.6s; transform-style: preserve-3d;">
                    <div class="flip-card-front" style="position: absolute; width: 100%; height: 100%; backface-visibility: hidden; background: #2892a7; color: white; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                        <h3>My Passions</h3>
                    </div>
                    <div class="flip-card-back" style="position: absolute; width: 100%; height: 100%; backface-visibility: hidden; background: #ffffff; color: #212529; transform: rotateY(180deg); display: flex; align-items: center; justify-content: center; flex-direction: column; border-radius: 10px;">
                        <ul style="list-style: none; padding: 0;">
                            <li>Archery</li>
                            <li>Video Games (Counter-Strike, Call of Duty, Minecraft)</li>
                            <li>Badminton</li>
                            <li>Ice Skating</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div style="display: flex; flex-wrap: wrap; gap: 20px; margin-top: 30px;">
            <!-- Card 3: Education -->
            <div class="flip-card" style="perspective: 1000px;">
                <div class="flip-card-inner" style="position: relative; width: 350px; height: 250px; text-align: center; transition: transform 0.6s; transform-style: preserve-3d;">
                    <div class="flip-card-front" style="position: absolute; width: 100%; height: 100%; backface-visibility: hidden; background: #17a2b8; color: white; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                        <h3>Education</h3>
                    </div>
                    <div class="flip-card-back" style="position: absolute; width: 100%; height: 100%; backface-visibility: hidden; background: #ffffff; color: #212529; transform: rotateY(180deg); display: flex; align-items: center; justify-content: center; flex-direction: column; border-radius: 10px;">
                        <p><strong>High School:</strong> STI2D</p>
                        <p><strong>Diploma:</strong> Obtained (no honors)</p>
                        <p><strong>Current Studies:</strong> BUT Network and Telecommunication</p>
                    </div>
                </div>
            </div>

        </div>

        <!-- Animated Button -->
        <button id="learn-more" style="margin-top: 20px; padding: 15px 30px; font-size: 1.4em; color: white; background-color: #6c757d; border: none; border-radius: 5px; cursor: pointer; transition: background-color 0.3s, transform 0.3s;">
            Home
        </button>
        <a></a>

    </div>

    <footer style="text-align: center; padding: 10px; background-color: #343a40; color: white; font-size: 0.9em; margin-top: auto;">
        &copy; 2025 Hugo Bertin
    </footer>

    <script>
        document.querySelectorAll('.flip-card').forEach(card => {
            card.addEventListener('mouseover', () => {
                card.querySelector('.flip-card-inner').style.transform = 'rotateY(180deg)';
            });
            card.addEventListener('mouseout', () => {
                card.querySelector('.flip-card-inner').style.transform = 'rotateY(0deg)';
            });
        });

        const button = document.getElementById('learn-more');
        button.addEventListener('click', () => {
            button.style.backgroundColor = '#007bff';
            button.style.transform = 'scale(1.1)';
            setTimeout(() => {
                button.style.backgroundColor = '#6c757d';
                button.style.transform = 'scale(1)';
                window.location.href = '/hugo';
            }, 300);
        });
    </script>

</body>

{% endblock %}
