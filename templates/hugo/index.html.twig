{% extends 'base.html.twig' %}

{% block title %}Welcome - Hugo Bertin{% endblock %}

{% block body %}

<body style="font-family: 'Roboto', sans-serif; background-color: #e9ecef; color: #212529; margin: 0; padding: 0; display: flex; flex-direction: column; min-height: 100vh;">
    <div class="container" style="flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 20px; padding: 20px;">

        <header style="text-align: center; background-color: #007bff; color: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); width: 100%; max-width: 600px;">
            <h1 style="font-size: 2.5em; margin: 0;">Welcome to my web page</h1>
        </header>

        <section style="background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); width: 100%; max-width: 600px;">
            <h2 style="text-align: center; color: #007bff; margin-bottom: 15px;">Personal Information</h2>
            <div style="font-size: 1.2em; line-height: 1.8; color: #495057;">
                <p><strong>Last Name:</strong> BERTIN</p>
                <p><strong>First Name:</strong> Hugo</p>
                <p><strong>Group:</strong> B1</p>
                <p><strong>Study:</strong> BUT Network and Telecommunication</p>
            </div>
        </section>

        <button id="learn-more" style="margin-top: 20px; padding: 15px 30px; font-size: 1.4em; color: white; background-color: #6c757d; border: none; border-radius: 5px; cursor: pointer; transition: background-color 0.3s, transform 0.3s;">
            Learn more
        </button>

    </div>

    <footer style="text-align: center; padding: 10px; background-color: #343a40; color: white; font-size: 0.9em; margin-top: auto;">
        &copy; 2025 Hugo Bertin
    </footer>

    <script>
        const button = document.getElementById('learn-more');
        button.addEventListener('click', () => {
            button.style.backgroundColor = '#007bff';
            button.style.transform = 'scale(1.1)';
            setTimeout(() => {
                button.style.backgroundColor = '#6c757d';
                button.style.transform = 'scale(1)';
                window.location.href = '/infosup'; // Replace '/next-page' with your target page link
            }, 300);
        });
    </script>

</body>

{% endblock %}
